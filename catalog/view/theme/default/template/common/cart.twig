<div class="modal fade cart-modal" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="h2">ВАШІ ТОВАРИ:</h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <svg class="icon" width="19" height="19" viewBox="0 0 19 19" xmlns="http://www.w3.org/2000/svg">
            <path d="M17.371 18.7277L0.14587 1.50257L1.46109 0.187348L18.6862 17.4125L17.371 18.7277ZM1.24896 18.8974L0.0185915 17.667L17.668 0.0176434L18.8983 1.24801L1.24896 18.8974Z"/>
          </svg>
        </button>

      </div>
      <div class="modal-body">
        {% if products or vouchers %}
        <div class="checkout-table__container">
          <div class="checkout-table">
            {% for product in products %}
              <div class="checkout-table__item">
                <div class="checkout-table__image">
                  {% if product.thumb %}
                    <a href="{{ product.href }}">
                      <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" />
                    </a>
                  {% endif %}
                </div>
                <div class="checkout-table__info checkout-description">
                  <div class="checkout-description__title">
                    <a href="{{ product.href }}">{{ product.name }}</a>
                  </div>
                  {% if product['sku'] %}
                    <div class="checkout-description__attribute">
                      <span>{{ text_scu }}: {{ product['sku'] }}</span>
                    </div>
                  {% endif %}
                  {% if product.option %}
                    <div class="options">
                      <ul>
                        {% for option in product.option %}
                            <li><strong>{{ option.name }}</strong>: {{ option.value }}</li>
                        {% endfor %}
                      </ul>
                    </div>
                  {% endif %}
                  <div class="quantity-container">
                    <span class="quantity-title">{{text_quantity}}</span>
                    <div class="quantity">
                      {{ product.quantity }} x
                    </div>
                    <div class="price">
                      {{ product.total }}
                    </div>
                  </div>
                </div>
                <div class="checkout-table__remove">
                  <button type="button" onclick="cart.remove('{{ product.cart_id }}');" title="{{ button_remove }}" class="btn btn-danger btn-xs">
{#                    <i class="fa fa-times"></i>#}
                  </button>
                  {#<button class="btn btn-danger" data-onclick="removeProduct" data-product-key="{{ product['cart_id'] is not empty ? product['cart_id'] : product['key'] }}" data-toggle="tooltip" type="button">
                    #}{#                            <i class="fa fa-times-circle"></i>#}{#
                  </button>#}
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="checkout-footer">
            <a href="javascript:void(0)" class="close-popup">Продовжити покупки</a>
            <div class="checkout-footer-total__block">
              <div class="checkout-footer-total">
                <div class="total">
                  <ul>
                    {% for total in totals %}
                      <li>{{ total.title }}<span>{{ total.text }}</span></li>
                    {% endfor %}
                  </ul>

                </div>
              </div>
              <a class="btn btn_secondary w-100 text-uppercase text-center" href="{{ checkout }}">{{ text_checkout }}</a>
            </div>
          </div>
        </div>
        {% else %}
          <p class="text-center">{{ text_empty }}</p>
        {% endif %}

