{% if modules %}
    {% if (home_url == '/' or home_url == '/index.php?route=common/home')%}
        {% for module in modules %}
            {{ module }}
        {% endfor %}
    {% else %}
        <aside id="column-left" class="col-sm-3 hidden-xs">
            {% for module in modules %}
                {{ module }}
            {% endfor %}
        </aside>
    {% endif %}
{% endif %}
