{% if modules %}
    {% if (home_url == '/' or home_url == '/index.php?route=common/home')%}
        <div class="home-container">
            <div class="container">
                {{ module }}
            </div>
        </div>
    {% else %}
        <aside id="column-right" class="col-sm-3 hidden-xs">
            {% for module in modules %}
                {{ module }}
            {% endfor %}
        </aside>
    {% endif %}

{% endif %}
