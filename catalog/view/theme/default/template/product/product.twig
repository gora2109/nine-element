{{ header }}
<section class="section product-cart__section">
    <div id="product-product" class="container">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
        <div id="content" class="{{ class }}">
            {{ content_top }}
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="product-cart__image {% if images|length != '0' %} product-cart__image_block{% endif %}">
                        {% if thumb and images|length == '0' %}
                            <div class="thumbnails">
                                <a class="thumbnail" href="{{ popup }}" title="{{ heading_title }}">
                                    <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                </a>
                            </div>
                        {% else %}
                            <div id="product-cart-slider-thumb" class="slider slider-for slider-thumb">
                                <div class="slide-item">
                                    <div class="thumbnails">
                                        <a class="thumbnail" href="{{ popup }}" title="{{ heading_title }}">
                                            <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                        </a>
                                    </div>
                                </div>
                                {% for image in images %}
                                    <div class="slide-item">
                                        <div class="thumbnails">
                                            <a class="thumbnail" href="{{ image.popup }}" title="{{ heading_title }}">
                                                <img src="{{ image.thumb_big }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                            <div id="product-cart-slider-images" class="slider slider-nav slider-images">
                                <div class="slide-item">
                                    <img src="{{ thumb__small }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                </div>
                                {% for image in images %}
                                    <div class="slide-item">
                                        <img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-sm-12 col-md-5 col-md-push-1">
                    <div id="product" class="product-cart__detail">
                        <div class="top">
                            <h1 class="title h4">{{ heading_title }}</h1>
                            {% if review_status %}
                                <div class="rating rating__top">
                                    {% for i in 1..5 %}
                                        {% if rating < i %}
                                            <span class="star">
{#                                                    <i class="fa fa-star-o fa-stack-1x"></i>#}
