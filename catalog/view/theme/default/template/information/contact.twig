{{ header }}
<div class="top-banner contact-banner" style="background-image: url('catalog/view/theme/default/image/contact-banner-1.jpg')">
  <div class="container">
    <div class="contact-banner__container">
      <img src="catalog/view/theme/default/image/contact-banner-2.png" alt="contact-banner-2" title="contact-banner-2">
    </div>
  </div>
</div>
<section id="information-contact" class="contact-section">
