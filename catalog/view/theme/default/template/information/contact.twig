                </div>
              </div>

            </div>
          </div>
          <div class="col-md-6">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal contact-form">
              <fieldset>
                <legend class="h4 text-center">{{ text_contact }}</legend>
                <div class="col-xs-12">
                  <div class="form-group required">
                  <input type="text" name="name" placeholder="{{ entry_name }}" value="{{ name }}" id="input-name" class="form-control" />
                  {% if error_name %}
                    <div class="text-danger">{{ error_name }}</div>
                  {% endif %}
                </div>
                </div>

                <div class="col-xs-12">
                  <div class="form-group required">
                  <input type="text" placeholder="{{ entry_email }}" name="email" value="{{ email }}" id="input-email" class="form-control" />
                  {% if error_email %}
                    <div class="text-danger">{{ error_email }}</div>
                  {% endif %}
                </div>
                </div>

                <div class="col-xs-12">
                  <div class="form-group ">
                  <input type="tel" placeholder="{{ entry_phone }}" name="tel" value="{{ tel }}" id="input-tel" class="form-control tel" />
                </div>
                </div>

                <div class="col-xs-12">
                  <div class="form-group required">
                  <textarea name="enquiry" rows="10" placeholder="{{ entry_enquiry }}" id="input-enquiry">{{ enquiry }}</textarea>
                  {% if error_enquiry %}
                    <div class="text-danger">{{ error_enquiry }}</div>
                  {% endif %}
                </div>
                </div>

                {{ captcha }}
              </fieldset>
              <div class="buttons">
                <input class="btn btn-primary btn_secondary w-100 text-uppercase" type="submit" value="{{ button_submit }}" />
              </div>
            </form>
          </div>
          </div>
        </div>
        {{ content_bottom }}</div>
      {{ column_right }}</div>
  </div>

</section>
<div id="map-1" class="map map-container contact-map"></div>

{{ footer }}
